
<div class="container">
    <div class="row">
        <button class="btn btn-primary addUserBtn" id="addUserBtn">添加新用户</button>
    </div>
    <form class="addUserForm">
          <div class="form-group">
            <label for="username">用户名：</label>
            <input type="text" class="form-control" id="username" placeholder="dreamapple">
        </div>
        <div class="form-group">
            <label for="email">Email：</label>
            <input type="email" class="form-control" id="email" placeholder="dreamapple@163.com">
        </div>
        <div class="form-group">
            <button type="reset" class="btn btn-warning">重置</button>
            <button type="submit" class="btn btn-primary">确认添加</button>
            <button class="btn btn-danger" id="formClose">取消</button>
        </div>
    </form>
</div>
<hr />
<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th>操作</th>
            <th>用户名</th>
            <th>用户类型</th>
            <th>状态</th>
            <th>权限</th>
            <th>所属部门</th>
            <th>注册时间</th>
            <th>备注</th>
        </tr>
    </thead>
    <tbody>
        <% _.each(users, function(user) { %>
        <tr>
            <td>
                <button class="btn btn-warning">修改</button>
                <button class="btn btn-success">授权</button>
                <button class="btn btn-danger">停用</button>
            </td>
            <td><%= user.attributes.username %></td>
            <td>--</td>
            <td>--</td>
            <td>--</td>
            <td>--</td>
            <td><%= user.createdAt %></td>
            <td>--</td>
        </tr>
        <% }) %>
    </tbody>
</table>