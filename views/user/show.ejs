<div class="container">
	<h1><%= user.name %> </h1>
		<% if(session.authenticated && session.User.admin) { %>
			<% if(user.admin) { %>
				<img src="/images/admin.png" alt="">
			<% } else { %>
				<img src="/images/noAdmin.png" alt="">
			<% } %>
    <% } %>
	<h3><%= user.title %> </h3>
	<hr>	
	<h3>contact: <%= user.name %> </h3>
	<a href="/user/edit/<%= user.id %>" class="btn btn-medium btn-primary">Edit</a>
	<a href="/article/index/<%= user.id %>" class="btn btn-medium btn-primary">Show Articles</a>
	<a href="/article/new/<%= user.id %>" class="btn btn-medium btn-primary">Add Article</a>	
</div>